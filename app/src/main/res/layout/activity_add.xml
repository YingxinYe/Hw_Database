<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.activities.AddActivity">

    <TextView
        android:id="@+id/Welcome_add_page_text"
        android:text="@string/please_add_data"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/add_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/light_yellow"
        android:hint="Please enter ID"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp" />

    <EditText
        android:id="@+id/add_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/light_yellow"
        android:hint="Please enter Name"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp" />

    <EditText
        android:id="@+id/add_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/light_yellow"
        android:hint="Please enter Phone"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp" />

    <EditText
        android:id="@+id/add_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/light_yellow"
        android:hint="Please enter Address"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp" />

    <Button
        android:id="@+id/add_page_button_add"
        android:text="Add"
        android:background="@color/colorPrimary"
        android:layout_gravity="center"
        android:textColor="@color/light_yellow"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>